<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FriendActivity">

    <!-- Label for Friends -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Friends"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="16dp"/>

    <!-- RecyclerView for Friends List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lstFriends"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:padding="8dp" />

    <!-- Label for Pending Friend Requests -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Pending Friend Requests"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="16dp"/>

    <!-- RecyclerView for Pending Friend Requests -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lstFriendRequests"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:padding="8dp" />
</LinearLayout>
